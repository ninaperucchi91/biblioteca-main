<%- include("partials/_header") -%> <%- include("partials/_navbar") -%>

<div class="container mt-5">
  <h3>Editar Usuario</h3>
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/usuarios/edit/<%= data.idUsuario %>" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="nombre_apellido"
                placeholder="Nombre y apellido"
                class="form-control"
                value="<%= data.nombre_apellido %>"
              />
            </div>
            <div class="form-group mt-2">
              <input
                type="text"
                name="dni"
                placeholder="DNI"
                class="form-control"
                value="<%= data.dni %>"
              />
            </div>
            <div class="form-group mt-2">
              <input
                type="text"
                name="CorreoUsuario"
                placeholder="E-mail"
                class="form-control"
                value="<%= data.CorreoUsuario %>"
              />
            </div>
            <div class="form-group mt-2">
              <input
                type="text"
                name="telefono"
                placeholder="E-mail"
                class="form-control"
                value="<%= data.telefono %>"
              />
            </div>

            <div class="form-group mt-2">
              <input
                type="text"
                name="UsuariosDireccion"
                placeholder="Direccion"
                class="form-control"
                value="<%= data.UsuariosDireccion %>"
              />
            </div>

            <div class="form-group">
              <label for="idCarrera" class="form-label mt-2"
                >Carrera</label
              >
              <select class="form-select" name="idCarrera">
                <% if(carreras) { %> <% for (var i = 0; i < carreras.length;
                i++) { %>carreras
                <option <%=( data.idCarrera == carreras[i].idCarrera ) ? "selected"
                : ""; %> value="<%= carreras[i].idCarrera%>">
                  <%= carreras[i].NombreCarrera + " - " + carreras[i].AÃ±oCarrera%>
                </option>
                <% } %> <% } %>
              </select>
            </div>

            <div class="form-group">
              <label for="idTipoUsuario" class="form-label mt-2"
                >Tipo Usuario</label
              >
              <select class="form-select" name="idTipoUsuario">
                <% if(tiposusuario) { %> <% for (var i = 0; i < tiposusuario.length;
                i++) { %>
                <option <%=( data.idTipoUsuario == tiposusuario[i].idTipoUsuario ) ? "selected"
                : ""; %> value="<%= tiposusuario[i].idTipoUsuario%>">
                  <%= tiposusuario[i].Descripcion%>
                </option>
                <% } %> <% } %>
              </select>
            </div>
            <div class="form-group mt-2">
              <button type="submit" class="btn btn-primary">GUARDAR</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") -%>
