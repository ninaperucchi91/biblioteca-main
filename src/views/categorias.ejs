<%- include("partials/_header") -%> <%- include("partials/_navbar") -%>

<div class="container mt-5">
  <h3 class="mt-2">Categorias</h3>
  <div class="row mt-5">
    <div class="col-md-7">
      <table id="table_id" class="display">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if(data) { %> <% for (var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= data[i].categorianombre %></td>
            <td><%= data[i].DescripcionCategoria %></td>
            <td>
              <a
                href="categorias/delete/<%= data[i].idCategoria%>"
                class="btn btn-danger btn-sm"
                ><i class="bi bi-trash"></i
              ></a>
              <a
                href="categorias/edit/<%= data[i].idCategoria%>"
                class="btn btn-warning btn-sm"
                ><i class="bi bi-pencil"></i
              ></a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="categorias/add" method="POST">
            <div class="form-group mt-2">
              <input
                type="text"
                name="categorianombre"
                placeholder="Nombre"
                class="form-control"
              />
            </div>
            <div class="form-group mt-2">
              <input
                type="text"
                name="DescripcionCategoria"
                placeholder="Descripcion"
                class="form-control"
              />
            </div>
            <div class="form-group mt-2">
              <button type="submit" class="btn btn-primary">GUARDAR</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") -%>
