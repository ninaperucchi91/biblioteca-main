<%- include("partials/_header") -%> <%- include("partials/_navbar") -%>

<div class="container mt-5">
  <h3>Editar libro</h3>
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/libros/edit/<%= data.idLibro %>" method="POST">
            <div class="form-group">
              <input
                type="text"
                name="nombre"
                placeholder="Nombre"
                class="form-control"
                value="<%= data.nombre %>"
              />
            </div>
            <div class="form-group mt-2">
              <input
                type="text"
                name="stock"
                placeholder="stock"
                class="form-control"
                value="<%= data.stock %>"
              />
            </div>
            <div class="form-group mt-2">
              <input
                type="text"
                name="numero_inventario"
                placeholder="Numero inventario"
                class="form-control"
                value="<%= data.numero_inventario %>"
              />
            </div>
            <div class="form-group">
              <label for="Autor_idAutor" class="form-label mt-2">Autor</label>
              <select class="form-select" name="Autor_idAutor">
                <% if(autores) { for (var i = 0; i < autores.length; i++){ %>

                <option <%=( data.Autor_idAutor == autores[i].idAutor ) ? "selected"
                : ""; %>
                  value="<%= autores[i].idAutor%>" > <%=
                  autores[i].NombreAutor%>
                </option>
                <% } } %>
              </select>
            </div>
            <div class="form-group">
              <label for="ISBN_idISBN" class="form-label mt-2">ISBN</label>
              <select class="form-select" name="ISBN_idISBN">
                <% if(isbn) { %> <% for (var i = 0; i < isbn.length; i++) { %>
                <option <%=( data.ISBN_idISBN == isbn[i].idISBN ) ? "selected"
                : ""; %> value="<%= isbn[i].idISBN%>"><%= isbn[i].ISBN%></option>
                <% } %> <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="idEditorial" class="form-label mt-2">Editorial</label>
              <select class="form-select" name="idEditorial">
                <% if(editoriales) { %> <% for (var i = 0; i <
                editoriales.length; i++) { %>
                <option <%=( data.idEditorial == editoriales[i].idEditorial ) ? "selected"
                : ""; %> value="<%= editoriales[i].idEditorial%>">
                  <%= editoriales[i].NombreEditorial%>
                </option>
                <% } %> <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="Categoria_idCategoria" class="form-label mt-2"
                >Categoria</label
              >
              <select class="form-select" name="Categoria_idCategoria">
                <% if(categorias) { %> <% for (var i = 0; i < categorias.length;
                i++) { %>
                <option <%=( data.Categoria_idCategoria == categorias[i].idCategoria ) ? "selected"
                : ""; %> value="<%= categorias[i].idCategoria%>">
                  <%= categorias[i].categorianombre%>
                </option>
                <% } %> <% } %>
              </select>
            </div>
            <div class="form-group mt-2">
              <button type="submit" class="btn btn-primary">GUARDAR</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") -%>
